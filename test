@echo off
REM MCP System Test - Windows Batch File
REM Double-click this file to test your MCP system

echo.
echo ==========================================
echo MCP SYSTEM TEST
echo ==========================================
echo.

cd /d "%~dp0"

echo Current directory: %CD%
echo.

echo Checking for Python...
python --version
if errorlevel 1 (
    echo.
    echo ERROR: Python not found!
    echo Please install Python from https://python.org
    echo.
    pause
    exit /b 1
)

echo.
echo Checking for database...
if exist "mcp_learning.db" (
    echo ✓ Database found: mcp_learning.db
) else (
    echo ✗ Database NOT found!
    echo Please make sure mcp_learning.db is in this folder.
    echo.
    pause
    exit /b 1
)

echo.
echo Running tests...
echo.

python test_suite.py

echo.
echo ==========================================
echo Test complete!
echo ==========================================
echo.
pause