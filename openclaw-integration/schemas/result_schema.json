{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkBot â†’ OpenClaw Result",
  "description": "Schema for result files dropped in outbox/ by Work Bot",
  "type": "object",
  "required": ["task_id", "timestamp", "source", "status"],
  "properties": {
    "task_id": {
      "type": "string",
      "format": "uuid",
      "description": "Must match the task_id from the inbox task file"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 UTC timestamp of result creation"
    },
    "source": {
      "type": "string",
      "const": "workbot"
    },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed", "unknown_skill", "timeout_self_reported"],
      "description": "Outcome of the task execution"
    },
    "result": {
      "type": "object",
      "description": "Skill output on success (structure varies by skill)",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Human-readable one-line summary of what was done"
        },
        "data": {
          "description": "Structured output data (skill-specific)"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["gmail_draft_id", "task_id", "doc_url", "file_url", "text"] },
              "value": { "type": "string" },
              "label": { "type": "string" }
            }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "Present when status is 'failed' or 'partial'",
      "properties": {
        "error_type": {
          "type": "string",
          "enum": [
            "external_service_unavailable",
            "permission_denied",
            "not_found",
            "validation_error",
            "internal_error",
            "ambiguous_input",
            "rate_limited"
          ]
        },
        "message": {
          "type": "string",
          "description": "Human-readable error description"
        },
        "retryable": {
          "type": "boolean",
          "description": "True if the same task can be retried without modification"
        },
        "retry_after_seconds": {
          "type": "integer",
          "description": "Suggested wait before retry (for rate limits, service outages)"
        },
        "suggested_fix": {
          "type": "string",
          "description": "What parameter or context change might fix the problem"
        }
      }
    },
    "skill_used": {
      "type": "string",
      "description": "The skill that was actually executed"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Work Bot confidence in the result quality (0.0 = guess, 1.0 = certain)"
    },
    "partial_results": {
      "type": "object",
      "description": "Present when status='partial': what was completed vs what failed",
      "properties": {
        "completed_steps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "failed_steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "step": { "type": "string" },
              "reason": { "type": "string" }
            }
          }
        },
        "resumable": {
          "type": "boolean",
          "description": "True if OpenClaw can resume from where Work Bot stopped"
        },
        "resume_context": {
          "type": "object",
          "description": "State needed to resume the workflow"
        }
      }
    },
    "unknown_skill_info": {
      "type": "object",
      "description": "Present when status='unknown_skill'",
      "properties": {
        "requested_skill": { "type": "string" },
        "available_skills": {
          "type": "array",
          "items": { "type": "string" }
        },
        "closest_match": {
          "type": "string",
          "description": "Nearest skill by name similarity"
        },
        "decomposition_hint": {
          "type": "string",
          "description": "How the task might be broken into known skills"
        }
      }
    },
    "duration_ms": {
      "type": "integer",
      "description": "How long Work Bot took to execute the task"
    },
    "metadata": {
      "type": "object",
      "description": "Additional debug/audit information",
      "properties": {
        "llm_used": { "type": "string" },
        "api_calls_made": { "type": "integer" },
        "workbot_version": { "type": "string" }
      }
    }
  }
}
